{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build all modified files",
			"command": "cpp_builder.py",
			"args": ["-p", "debug"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"type": "shell",
			"label": "Build all files",
